#!/usr/bin/env bash
set -eu

SCRIPT_DIR=$(cd $(dirname $0); pwd)
I18N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $I18N_HOME

source config/l10n-kit.conf

for TARGET_LANG in $TARGET_LANGS; do
  for ITEM in `\find i18n/po/$TARGET_LANG -name "*.po"`; do
    if [ -f $ITEM ] ; then
      echo $ITEM
        pretranslate --similarity=$SIMILARITY --tm=$TMX_FILE_PATH --template=$ITEM --input=$ITEM --output=$ITEM
        msgcat --to-code=utf-8 --no-wrap -o $ITEM $ITEM
    fi
  done
done
